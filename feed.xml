---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ site.meta.title | xml_escape }}</title>
    <description>{{ site.meta.description | xml_escape }}</description>
    <author>{{ site.author.name | xml_escape }}</author>
    <link>{{ site.url }}</link>
    <atom:link href="{{ site.url }}/feed.xml" rel="self" type="application/rss+xml" />
    {% for post in site.posts limit:20 %}
      <item>
        <id>{{ site.url }}{{ post.url }}</id>
        <title>{{ post.title | xml_escape }}</title>
        <creator>{{ site.author.name | xml_escape }}</creator>
        <description>
          {{ post.content | strip_html | xml_escape | truncatewords: 50 }}
        </description>
        <pubDate>{{ post.date | date: "%a, %d %b %Y %H:%M:%S %z" }}</pubDate>
        <published>{{ post.date | date: "%a, %d %b %Y %H:%M:%S %z" }}</published>
        <link>{{ site.url }}{{ post.url }}</link>
        <guid isPermaLink="true">{{ site.url }}{{ post.url }}</guid>
      </item>
    {% endfor %}
  </channel>
</rss>